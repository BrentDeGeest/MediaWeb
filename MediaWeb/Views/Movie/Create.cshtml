@model MediaWeb.Models.Movie.MovieCreateViewModel

    <form asp-controller="Movie" asp-action="Create" method="post">

        <div class="form-group">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-group">
            <label asp-for="Length"></label>
            <input class="form-control" type="number" asp-for="Length" />
            <span class="text-danger" asp-validation-for="Length"></span>
        </div>



        <div class="form-group">
            <label asp-for="ReleaseDate"></label>
            <input class="form-control" asp-for="ReleaseDate" />
            <span class="text-danger" asp-validation-for="ReleaseDate"></span>

        </div>


        @*@foreach (var item in Model.Genresd)
        {
            <input type="checkbox"  /> @item
        }*@

        @for (int i = 0; i < Model.Genres.Count; i++)
        {
            <input type="checkbox" asp-for="Genres[i].Checked">
            <label asp-for="@Model.Genres">@Model.Genres[i].Naam</label>
            <input type="hidden" asp-for="Genres[i].Id">
            <input type="hidden" asp-for="Genres[i].Naam">
        }


        <div class="form-group">
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button class="btn btn-primary" type="submit">Create Movie</button>


    </form>