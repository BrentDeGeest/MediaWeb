@model IEnumerable<MediaWeb.Models.Podcast.Author.AuthorListViewModel>


@if (Model != null)
{
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">First name</th>
            </tr>
        </thead>
        @{ int count = 1;}
        @foreach (var author in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        @author.Name

                    </td>
                    <td>
                        @author.FirstName

                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="PodcastAuthor" asp-route-id="@author.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-controller="PodcastAuthor" asp-route-id="@author.Id">Delete</a>

                    </td>
                </tr>
            </tbody>
            count++;
        }
    </table>

}
else
{
    <p>nog geen authors.</p>
}



<a class="btn btn-primary" asp-action="Create" asp-controller="PodcastAuthor">Create author</a>
