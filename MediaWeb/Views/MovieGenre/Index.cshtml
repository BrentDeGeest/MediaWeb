@model IEnumerable<MediaWeb.Models.Movie.Genre.MovieGenreListViewModel>


@if (Model != null)
{
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        @{ int count = 1;}
        @foreach (var genre in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        @genre.Name

                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="MovieGenre" asp-route-id="@genre.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-controller="MovieGenre" asp-route-id="@genre.Id">Delete</a>

                    </td>
                </tr>
            </tbody>
            count++;
        }
    </table>

}
else
{
    <p>nog geen genres.</p>
}



<a class="btn btn-primary" asp-action="Create" asp-controller="MovieGenre">Create genre</a>
