@model IEnumerable<MediaWeb.Models.Song.Artist.ArtistListViewModel>


@if (Model != null)
{
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
            </tr>
        </thead>
        @{ int count = 1;}
        @foreach (var artist in Model)
        {
            <tbody>
                <tr>
                    <td>@count</td>
                    <td>
                        @artist.Name

                    </td>
                    <td>
                        @artist.FirstName
                    </td>

                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="SongArtist" asp-route-id="@artist.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-controller="SongArtist" asp-route-id="@artist.Id">Delete</a>

                    </td>
                </tr>
            </tbody>
            count++;
        }
    </table>

}
else
{
    <p>nog geen artists.</p>
}



<a class="btn btn-primary" asp-action="Create" asp-controller="SongArtist">Create artist</a>
