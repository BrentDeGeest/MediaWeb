@model IEnumerable<MediaWeb.Models.Movie.Regisseur.MovieRegisseurListViewModel>


@if (Model != null)
{
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Last Name</th>
                <th scope="col">First Name</th>
            </tr>
        </thead>
        @{ int count = 1;}
        @foreach (var regisseur in Model)
        {
            <tbody>
                <tr>
                    <td>@count</td>
                    <td>
                        @regisseur.Name

                    </td>
                    <td>
                        @regisseur.FirstName
                    </td>
                    
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="MovieRegisseur" asp-route-id="@regisseur.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="Delete" asp-controller="MovieRegisseur" asp-route-id="@regisseur.Id">Delete</a>

                    </td>
                </tr>
            </tbody>
            count++;
        }
    </table>

}
else
{
    <p>nog geen regisseurs.</p>
}



<a class="btn btn-primary" asp-action="Create" asp-controller="MovieRegisseur">Create regisseur</a>
